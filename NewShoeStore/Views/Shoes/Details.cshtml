                    <dd>
                        <label for="color" class="frameForText">@Html.DisplayFor(model => model.Color)</label>
                    </dd>
                </dl>

                <dl class="row">
                    <dt>
                        <span class="font-weight-normal">@Html.DisplayNameFor(model => model.Price):</span>
                    </dt>
                    <dd>
                        <label for="price" class="frameForText">@Html.DisplayFor(model => model.Price)</label>
                    </dd>
                </dl>
            </div>
            <a asp-action="AddToCart" asp-route-id="@Model.Id" class="btn btn-secondary btn-lg btn-block stayR">הוסף לסל </a>
            <a asp-action="Cart" class="btn btn-secondary btn-lg btn-block stayR">תשלום </a>
            <a asp-action="Index" class="btn btn-secondary btn-lg btn-block stayR">חזרה לרשימת המוצרים</a>
        </dd>
    </dl>
</div>

