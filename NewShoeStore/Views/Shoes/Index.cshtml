@using Microsoft.AspNetCore.Http;
@model IEnumerable<NewShoeStore.Models.Shoe>

@{
    ViewData["Title"] = "Index";
}

@*<h1>מוצרים</h1>*@
@if (Context.Session.GetString("UserName.Id") == "1")
{
    <p>
        <a asp-action="Create">Create New</a>
    </p> 
}

<div class="container">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-lg-3 col-md-4 col-sm-6">
                <div class="card">
                    <img src="@item.Img" class="card-img-top productImg" />
                    <div class="card-body">
                        @*<p class="card-title"> @Html.DisplayNameFor(model => model.Name)</p>*@
                        <p class="card-title">@item.Name</p>
                        <p class="card-text">
                            @item.ProductDescription
                            @Html.DisplayNameFor(model => model.Price)
                            : @item.Price
                        </p>
                        @*<p class="card-text">@item.ProductDescription</p>*@
                        @* <p class="card-text">@Html.DisplayNameFor(model => model.Price) : @item.Price</p>*@
                        @*<p class="card-text">@item.Price</p>*@
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-dark">פרטים</a>
                    </div>
                </div>
            </div>
        }

    </div>
</div>

