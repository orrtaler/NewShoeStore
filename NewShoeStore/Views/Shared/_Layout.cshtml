<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - NewShoeStore</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/HeaderFooter.css" />
    @RenderSection("Css", required: false)
</head>
<body>
    <header>

        <!--מכאן הקוד לחלק העליון-->
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <form asp-area="" asp-controller="Shoes" asp-action="SearchAsync" class="form-inline my-2 my-lg-0">
                <input class="form-control mr-sm-2" type="SearchAsync" placeholder="חיפוש מוצר" aria-label="SearchAsync" name="SearchAsync">
                <!--<button class="btn btn-outline-primary my-2 my-sm-0" data-icon="search">חיפוש</button>-->
                <!--קישור עם איכון של חיפוש-->
                <a asp-area="" asp-controller="Shoes" asp-action="SearchAsync">
                    <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-search colorForSearch" fill="currentColor"
                         xmlns="http://www.w3.org/2000/svg">
                        <path fill-rule="evenodd"
                              d="M10.442 10.442a1 1 0 0 1 1.415 0l3.85 3.85a1 1 0 0 1-1.414 1.415l-3.85-3.85a1 1 0 0 1 0-1.415z" />
                        <path fill-rule="evenodd"
                              d="M6.5 12a5.5 5.5 0 1 0 0-11 5.5 5.5 0 0 0 0 11zM13 6.5a6.5 6.5 0 1 1-13 0 6.5 6.5 0 0 1 13 0z" />
                    </svg>
                </a>
                <!--קישור עם איכון של סל קניות-->

                <a asp-area="" asp-controller="Shoes" asp-action="Cart">

                    <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-cart3 colorForShoppingCart" fill="currentColor"
                         xmlns="http://www.w3.org/2000/svg">
                        <path fill-rule="evenodd"
                              d="M0 1.5A.5.5 0 0 1 .5 1H2a.5.5 0 0 1 .485.379L2.89 3H14.5a.5.5 0 0 1 .49.598l-1 5a.5.5 0 0 1-.465.401l-9.397.472L4.415 11H13a.5.5 0 0 1 0 1H4a.5.5 0 0 1-.491-.408L2.01 3.607 1.61 2H.5a.5.5 0 0 1-.5-.5zM3.102 4l.84 4.479 9.144-.459L13.89 4H3.102zM5 12a2 2 0 1 0 0 4 2 2 0 0 0 0-4zm7 0a2 2 0 1 0 0 4 2 2 0 0 0 0-4zm-7 1a1 1 0 1 0 0 2 1 1 0 0 0 0-2zm7 0a1 1 0 1 0 0 2 1 1 0 0 0 0-2z" />
                    </svg>
                </a>
            </form>

            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse abc" id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item dropdown inTheSameLine">
                        <a class="nav-link dropbtn" href="#" id="navbarDropdown" role="button" data-toggle="dropdown"
                           aria-haspopup="true" aria-expanded="false">
                            נשים
                        </a>
                        <div class="dropdown-menu dropdown-content" aria-labelledby="navbarDropdown">
                            <a class="dropdown-item" href="#">מגפיים</a>
                            <a class="dropdown-item" href="#">סנדלים</a>
                            <!--<div class="dropdown-divider"></div>-->
                            <a class="dropdown-item" href="#">סניקרס</a>
                            <a class="dropdown-item" href="#">נעלי בובה </a>
                            <a class="dropdown-item" href="#">עקבים</a>
                            <a class="dropdown-item" href="#">נעלי בית</a>
                        </div>
                    </li>
                    <li class="nav-item dropdown inTheSameLine">
                        <a class="nav-link dropbtn" href="#" id="navbarDropdown" role="button" data-toggle="dropdown"
                           aria-haspopup="true" aria-expanded="false">
                            גברים
                        </a>
                        <div class="dropdown-menu dropdown-content" aria-labelledby="navbarDropdown">
                            <a class="dropdown-item" href="#">אלגנט</a>
                            <a class="dropdown-item" href="#">מגפיים</a>
                            <a class="dropdown-item" href="#">סנדלים</a>
                            <a class="dropdown-item" href="#">נעלי בית</a>
                            <a class="dropdown-item" href="#">סניקרס</a>
                        </div>
                    </li>
                    <li class="nav-item dropdown inTheSameLine">
                        <a class="nav-link dropbtn" href="#" id="navbarDropdown" role="button" data-toggle="dropdown"
                           aria-haspopup="true" aria-expanded="false">
                            בנים
                        </a>
                        <div class="dropdown-menu dropdown-content" aria-labelledby="navbarDropdown">
                            <a class="dropdown-item" href="#">מגפיים</a>
                            <a class="dropdown-item" href="#">סנדלים</a>
                            <a class="dropdown-item" href="#">נעלי בית</a>
                            <a class="dropdown-item" href="#">סניקרס</a>
                            <a class="dropdown-item" href="#">אלגנט</a>
                        </div>
                    </li>
                    <li class="nav-item dropdown inTheSameLine">
                        <a class="nav-link dropbtn" href="#" id="navbarDropdown" role="button" data-toggle="dropdown"
                           aria-haspopup="true" aria-expanded="false">
                            בנות
                        </a>
                        <div class="dropdown-menu dropdown-content" aria-labelledby="navbarDropdown">
                            <a class="dropdown-item" href="#">מגפיים</a>
                            <a class="dropdown-item" href="#">סנדלים</a>
                            <a class="dropdown-item" href="#">נעלי בית</a>
                            <a class="dropdown-item" href="#">סניקרס</a>
                            <a class="dropdown-item" href="#">נעלי בובה</a>
                        </div>
                    </li>
                    <li class="nav-item dropdown inTheSameLine">
                        <a class="nav-link dropbtn" href="#" id="navbarDropdown" role="button" data-toggle="dropdown"
                           aria-haspopup="true" aria-expanded="false">
                            בייבי בנים
                        </a>
                        <div class="dropdown-menu dropdown-content above" aria-labelledby="navbarDropdown">
                            <a class="dropdown-item" href="#">נעלי צעד ראשון</a>
                            <a class="dropdown-item" href="#">חגיגי</a>
                            <a class="dropdown-item" href="#">ספורט</a>
                            <a class="dropdown-item" href="#">נעלי בית</a>
                        </div>
                    </li>
                    <li class="nav-item dropdown inTheSameLine">
                        <a class="nav-link dropbtn" href="#" id="navbarDropdown" role="button" data-toggle="dropdown"
                           aria-haspopup="true" aria-expanded="false">
                            בייבי בנות
                        </a>
                        <div class="dropdown-menu dropdown-content above" aria-labelledby="navbarDropdown">
                            <a class="dropdown-item above" href="#">נעלי צעד ראשון</a>
                            <a class="dropdown-item above" href="#">חגיגי</a>
                            <a class="dropdown-item above" href="#">ספורט</a>
                            <a class="dropdown-item above" href="#">נעלי בית</a>
                        </div>
                    </li>
                </ul>

            </div>
        </nav>
        <!--עד כאן הקוד לחלק העליון-->
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer>
        <!-- מכאן הקוד לחלק התחתון-->
        <nav class="navbar navbar-expand-lg fixed-bottom navbar-dark bg-dark">
            <form class="form-inline my-lg-0">
                <div class="collapse navbar-collapse navbar-nav mr-auto abc" id="navbarSupportedContent">
                    <!--<ul class="navbar-nav mr-auto">-->
                    <div class="col-sm-3 stayRight">
                        <a class="nav-link " asp-area="" asp-controller="Home" asp-action="TermsofUse">תנאי שימוש</a>
                        <!-- צריך להוסיף את הקישור המתאים שמפנה-->
                    </div>
                    <div class="col-sm-3 stayRight">
                        <a class="nav-link " asp-area="" asp-controller="Home" asp-action="Privacy">הודעת פרטיות</a>
                        <!-- צריך להוסיף את הקישור המתאים שמפנה-->
                    </div>
                    <div class="col-sm-6">
                        <!--<p class="navbar-nav nav-item bottom-set">כל הזכויות שמורות ליעל כהן רותי עוזרי ואורטל טלר &copy;</p>-->
                        <div class="bottom-set">כל הזכויות שמורות ליעל כהן רותי עוזרי ואורטל טלר &copy;</div>
                    </div>
                </div>
            </form>
        </nav>
        <!-- עד כאן הקוד לחלק התחתון-->
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
