@model IEnumerable<NewShoeStore.Models.Order>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>


  <table class="table">
            <thead>
                <tr>
                    @*<th>
                        @Html.DisplayNameFor(model => model.Idcustomer)
                    </th>*@
                    <th>
                        @Html.DisplayNameFor(model => model.CardName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ExpiryDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.SecurityCode)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
        @foreach (var item in Model) {
                <tr>
                    @*<td>
                        @Html.DisplayFor(modelItem => item.Idcustomer)
                    </td>*@
                    <td>
                        @Html.DisplayFor(modelItem => item.CardName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ExpiryDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SecurityCode)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
        }
            </tbody>
        </table>


    @section Css{
        <link rel="stylesheet" href="~/css/Order.css" />
        <link rel="stylesheet" href="~/css/OrderShoes.css" />
