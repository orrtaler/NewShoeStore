<form class="styleForForm">
    <div class="form-row">
        <div class="form-group col-md-12 m">
            <div class="col-md-6 col-xl-6">
                <label class="frameForText" for="inputName">שם בעל הכרטיס</label>
            </div>
            <div class="col-md-6 col-xl-6">
                <input type="text" class="form-control" id="inputName">
            </div>
        </div>
    </div>

    <div class="form-row">
        <div class="form-group col-md-6">
            <label class="frameForText" for="inputId">תעודת זהות</label>
            <input type="number" class="form-control" id="inputId">
        </div>
    </div>

    <div class="form-row">
        <div class="col-md-6 mb-3">
            <label class="frameForText" for="validationDefault03">מספר כרטיס</label>
            <input type="number" class="form-control" id="validationDefault03" required>
        </div>
    </div>

    <div class="form-row">
        <div class="form-group col-md-1 mb-1">
            <label class="frameForText" for="validationCustom04">תאריך תפוגה</label>
